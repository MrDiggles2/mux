{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "declaration": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "rootDir": "./src/"
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src"]
}
